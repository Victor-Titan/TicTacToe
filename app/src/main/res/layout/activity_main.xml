<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button_00" android:layout_weight="1"
                    android:textSize="40dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button_01" android:layout_weight="1"
                    android:textSize="40dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button_02" android:layout_weight="1"
                    android:textSize="40dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button_10" android:layout_weight="1"
                    android:textSize="40dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button_11" android:layout_weight="1"
                    android:textSize="40dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button_12" android:layout_weight="1"
                    android:textSize="40dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button_20" android:layout_weight="1"
                    android:textSize="40dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button_21" android:layout_weight="1"
                    android:textSize="40dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button_22" android:layout_weight="1"
                    android:textSize="40dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>